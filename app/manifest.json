{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "1.0.0",
  "manifest_version": 3,
  "default_locale": "en",
  "icons": {
    "16": "images/16.png",
    "128": "images/128.png"
  },
  "action":{
    "default_icon":{
      "16": "images/16.png",
      "24": "images/24.png",
      "48": "images/48.png"
    },
    "default_title": "__MSG_browserActionTitle__"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.overleaf.com/project/*"],
      "exclude_matches": ["https://www.mindmeister.com/oauth2/*","https://www.mindmeister.com/*account/login*","https://www.mindmeister.com/robots.txt*"],
      "js": ["scripts/content_script.js"],
      "css": ["styles/contentScript.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "pages/options.html",
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rule_set1",
        "enabled": true,
        "path": "resources/rules.json"
      }
    ]
  },
  "permissions": [
    "storage",
    "webRequest",
    "contextMenus",
    "declarativeNetRequest",
    "identity",
    "unlimitedStorage",
    "https://api.anthropic.com/*",
    "https://api.anthropic.com"
  ],
  "host_permissions": [
    "https://www.overleaf.com/*",
    "https://www.mindmeister.com/services/rest/oauth2/token",
    "https://api.openai.com/v1/chat/completions",
    "https://chat.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.anthropic.com"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*",
                    "scripts/*",
                    "pages/*",
                    "resources/*"],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "key": ""
}
